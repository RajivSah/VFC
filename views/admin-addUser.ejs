<%- include('header', {title: "Admin"});  -%>
    <link rel="stylesheet" href="../public/assets/css/Registration-Form-with-Photo.css">
    </head>

    <body>

        <div class="row">
            <div class="col">
                <!-- Navbar -->
                <%- include('adminNavbar');  -%>
            </div>
        </div>
        </div>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <div class="register-photo">
                    <div class="form-container">
                        <div class="image-holder" style="background-image:url(&quot;../public/img/i-796x409.jpg&quot;);">fg</div>
                        <form method="post" action="http://localhost:8001/api/users" id="createUser" data-toggle="validator" role="form">
                            <h2 class="text-center">
                                <strong>Create</strong> an account.</h2>
                            <div class="form-group">
                                <input class="form-control" type="text" name="username" placeholder="Username" pattern="^[_A-z0-9]{1,}$" maxlength="15" required>
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" name="password" placeholder="Password (at least 6 characters)" id="password"
                                    required minlength="6">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" name="password_repeat" placeholder="Password (repeat)" required data-match="#password">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="role" value=" ">
                                    <optgroup label="Select Role">
                                        <option value="admin">Admin</option>
                                        <option value="voter-manager">Voter Manager</option>
                                        <option value="candidate-manager">Candidate Manager</option>
                                    </optgroup>
                                </select>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <button class="btn btn-primary btn-block" type="submit" style="background-color:rgb(35,56,99);">Create</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-2"></div>
        </div>
        <div class="row">
        </div>
        <style>
            .with-errors {
                height: 20px;
                font-size: 90%;
                color: red;
            }
        </style>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
        <script>
            $(function () {
                const toast = swal.mixin({
                    toast: true,
                    position: 'bottom-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                $.ajax({
                    method: "GET",
                    url: "/notification",
                    success: function (response) {
                        console.log
                        if (response.toNotify) {
                            toast({
                                type: response.type,
                                title: response.message
                            });
                            $.ajax({
                                method: "GET",
                                url: '/clearNotification'
                            });
                        }
                    }
                });
            });
        </script>
        <script src="https://unpkg.com/sweetalert2@7.21.1/dist/sweetalert2.all.js"></script>
        <%- include('footer'); -%>